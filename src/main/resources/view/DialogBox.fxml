<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         maxWidth="Infinity"
         styleClass="dialog-box">
    <stylesheets>
        <String fx:value="/css/dialog-box.css" />
    </stylesheets>
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true" minHeight="-Infinity" HBox.hgrow="ALWAYS" />
        <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <styleClass>
                <String fx:value="display-picture"/>
            </styleClass>
        </ImageView>
    </children>
</fx:root>